<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".BandNoticeBoard">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/noticeboardtitle"></include>

        <TextView
            android:id="@+id/tvbandidNoticeBoard"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>






    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin2"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ChooseDatemsg"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/work_sans"
                android:textColor="@color/colorPrimaryDark2"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="center"
                android:text="Choose Date"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">




            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

            <TableRow>

                <ImageView
                    android:id="@+id/ivpreviousbtn"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:src="@drawable/back"
                    android:layout_gravity="left"
                    android:layout_weight="6"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:onClick="backtoDate"
                    android:layout_height="40dp">
                </ImageView>

                <TextView
                    android:id="@+id/DateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/basic2"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_weight="2"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:text="Date:">

                </TextView>


                <TextView
                    android:id="@+id/myDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/basic2"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_weight="2"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:text="20/20/2020">


                </TextView>

            </TableRow>

            </TableLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"

            android:orientation="vertical">
            <CalendarView
                android:layout_gravity="center"
                android:id="@+id/calender1"
                android:theme="@style/CalenderViewCustom"
                android:background="@drawable/customecalender"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="380dp">

            </CalendarView>

            <TextView
                android:id="@+id/createnoticeforband"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/work_sans"
                android:textColor="@color/basic1"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="center"
                android:text="Create notice for your Band Members"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





            </RelativeLayout>










        </LinearLayout>

        <GridLayout
            android:id="@+id/grid1"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="4">
            <ImageView
                android:padding="5dp"
                android:src="@drawable/title"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </ImageView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:focusableInTouchMode="true"


                >

                <EditText
                    android:id="@+id/noticetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:hint="Notice title"
                    android:inputType="text"
                    android:textSize="22sp" />
            </com.google.android.material.textfield.TextInputLayout>




            <ImageView
                android:id="@+id/imgvStarttime"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:src="@drawable/ic_access_time_black_24dp"
                android:layout_height="40dp">
            </ImageView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:focusableInTouchMode="true"


                >

                <EditText
                    android:id="@+id/starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:hint="Start Time"
                    android:inputType="text"
                    android:textSize="22sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/imgvEndtime"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"

                android:src="@drawable/ic_access_time_black_24dp"></ImageView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginBottom="10dp"


                >

                <EditText
                    android:id="@+id/endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:hint="End Time"
                    android:inputType="text"
                    android:textSize="22sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:padding="5dp"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </ImageView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginBottom="10dp"


                >

                <EditText
                    android:id="@+id/venue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:hint="Venue"
                    android:inputType="text"
                    android:textSize="22sp" />
            </com.google.android.material.textfield.TextInputLayout>





            <ImageView
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:src="@drawable/ic_sort_black_24dp"
                android:layout_height="40dp">
            </ImageView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginBottom="10dp"

                >

                <EditText
                    android:id="@+id/descriptionband"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:hint="Description"
                    android:inputType="text"
                    android:textSize="22sp" />
            </com.google.android.material.textfield.TextInputLayout>




        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/nextbtn1"
                android:layout_gravity="center"
                android:text="Next"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/work_sans"
                android:textColor="#fff"
                android:onClick="gototimepicker"
                android:background="@drawable/button_rounded"
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:layout_height="wrap_content">

            </Button>

            <Button
                android:id="@+id/submitnoticebtn"
                android:layout_gravity="center"
                android:text="Send"
                android:textSize="18dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/work_sans"
                android:textColor="#fff"
                android:onClick="gototimepicker"
                android:background="@drawable/button_rounded"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_height="wrap_content">

            </Button>

<!--            <Button-->
<!--                android:id="@+id/nextbtn2"-->
<!--                android:layout_gravity="center"-->
<!--                android:text="Next"-->
<!--                android:textSize="18dp"-->
<!--                android:layout_marginTop="70dp"-->
<!--                android:visibility="visible"-->
<!--                android:fontFamily="sans-serif-medium"-->
<!--                android:textColor="#fff"-->
<!--                android:onClick="gototimepicker"-->
<!--                android:background="@drawable/button_rounded"-->
<!--                android:layout_width="180dp"-->
<!--                android:layout_height="wrap_content">-->

<!--            </Button>-->
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</ScrollView>