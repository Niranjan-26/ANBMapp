<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/tvprofilename"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/basic2"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp" />
        <ImageView
            android:layout_below="@+id/statusnewsfeed"
            android:id="@+id/imageView"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/refresh"
            android:layout_weight="1"
            android:padding="7dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/linear1"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_height="1dp"
            android:background="#080C30"
            android:layout_below="@+id/tvemail">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:background="#080C30"
            android:visibility="gone"
            android:layout_below="@+id/linear1">

        </LinearLayout>

        <TextView
            android:id="@+id/statusnewsfeed"
            android:layout_width="match_parent"
            android:layout_below="@+id/linear2"
            android:layout_marginTop="15dp"
            android:text="This is status"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/work_sans"
            android:textColor="#080C30"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@+id/tvprofilename"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/work_sans"
            android:hint="email"
            android:textColor="@color/basic1"
            android:textSize="13sp" />

<!--        <Button-->
<!--            android:id="@+id/btnNewsfeed"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/statusnewsfeed"-->
<!--            android:gravity="center|bottom"-->
<!--            android:text="contact">-->

<!--        </Button>-->

    </RelativeLayout>







</ScrollView>
