<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingRight="7dp"
    android:paddingLeft="7dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linr1"
        android:orientation="vertical"
        android:outlineSpotShadowColor="@color/colorPrimary"
        android:background="@drawable/customegallerybandnewsfeed"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/grid1"
                android:visibility="visible"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2">


                <TextView

                    android:padding="5dp"
                    android:text="Notice Title:"
                    android:textColor="@color/basic1"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                </TextView>

                <TextView
                    android:id="@+id/ntbmembers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_vertical"
                    android:fontFamily="@font/jacques_francois"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Notice Title"
                    android:textColor="@color/basic1"
                    android:textSize="19dp"></TextView>
                <TextView
                    android:id="@+id/a"
                    android:padding="5dp"
                    android:text="Date:"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </TextView>

                <TextView
                    android:id="@+id/dbmembers"
                    android:padding="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:text="date"
                    android:layout_gravity="fill_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </TextView>
                <TextView
                    android:id="@+id/b"
                    android:padding="5dp"
                    android:text="Start Time:"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </TextView>

                <TextView
                    android:id="@+id/stbmembers"
                    android:padding="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:text="Notice Title"
                    android:layout_gravity="fill_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </TextView>
                <TextView
                    android:id="@+id/c"
                    android:padding="5dp"
                    android:text="End Time:"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </TextView>

                <TextView
                    android:id="@+id/etbmembers"
                    android:padding="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:text="Notice Title"
                    android:layout_gravity="fill_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </TextView>
                <TextView
                    android:id="@+id/d"
                    android:padding="5dp"
                    android:text="Venue:"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </TextView>

                <TextView
                    android:id="@+id/vbmembers"
                    android:padding="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:text="Notice Title"
                    android:layout_gravity="fill_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </TextView>
                <TextView
                    android:id="@+id/e"
                    android:padding="5dp"
                    android:text="Description:"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </TextView>









            </GridLayout>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/gray2"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/desbmembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:fontFamily="@font/work_sans"
            android:hint="Description here"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:visibility="gone"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customeroundfornewsfeed"
       android:outlineSpotShadowColor="@color/colorPrimary"
        android:orientation="horizontal">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TableRow>

                <ImageView
                    android:id="@+id/ivdelbmembers"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:onClick="backtoDate"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp">
                </ImageView>

                <TextView
                    android:id="@+id/seelessbmembers"
                    android:paddingTop="5dp"
                    android:text="see less >>"
                    android:layout_marginRight="75dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:fontFamily="@font/work_sans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView
                    android:id="@+id/seemorebmembers"

                    android:padding="5dp"
                    android:text="see more >>"
                    android:layout_marginRight="75dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#fff"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:fontFamily="@font/work_sans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/work_sans"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:text="Posted on :">

                </TextView>


                <TextView
                    android:id="@+id/postdatebmembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/work_sans"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:layout_weight="2"
                    android:visibility="visible"
                    android:text="20/20/2020">


                </TextView>

            </TableRow>

        </TableLayout>





    </LinearLayout>











</LinearLayout>